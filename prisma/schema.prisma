generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Board {
  id            String   @id @default(uuid())
  title         String
  imageFullUrl  String?  @db.Text

  // 1. Link to the Creator (Admin)
  ownerId       String
  owner         User     @relation("OwnedBoards", fields: [ownerId], references: [id], onDelete: Cascade)

  lists         List[]
  
  // 2. Link to Members (Invited Users)
  members       BoardMember[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- NEW MODEL: Tracks which users are members of which board ---
model BoardMember {
  id        String   @id @default(uuid())
  boardId   String
  userId    String
  
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ensures a user can't be added to the same board twice
  @@unique([boardId, userId])
  @@index([boardId])
  @@index([userId])
}

model List {
  id        String   @id @default(uuid())
  title     String
  order     Int      

  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
   
  cards     Card[]
   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId])
}

model Card {
  id          String    @id @default(uuid())
  title       String
  description String?   @db.Text
  order       Int       
   
  startDate   DateTime?
  dueDate     DateTime?
  isCompleted Boolean   @default(false)

  listId      String
  list        List      @relation(fields: [listId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([listId])
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String   // Hashed Password
  image     String?  @db.Text
  
  // 3. Reverse Relations for easy access
  myBoards     Board[]       @relation("OwnedBoards") // Boards I created
  memberships  BoardMember[] // Boards I am invited to
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ACTION {
  CREATE
  UPDATE
  DELETE
  COMMENT
}

enum ENTITY_TYPE {
  BOARD
  LIST
  CARD
}

model AuditLog {
  id          String      @id @default(uuid())
  orgId       String
  action      ACTION
  entityId    String
  entityType  ENTITY_TYPE
  entityTitle String
  userId      String
  userImage   String      @db.Text
  userName    String      @db.Text
  message     String?     @db.Text

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}